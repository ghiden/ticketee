<strong>New Comment</strong>
<%= form_for [@ticket, @comment] do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :state_id %>
    <%= f.select :state_id, @states.map {|s| [s.name, s.id]},
          :selected => @ticket.state_id %>
  </p>

  <%= f.submit %>
<% end %>
